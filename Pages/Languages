  { code: 'ta', name: 'Tamil', native: 'தமிழ்', speakers: '79M+', regions: 'Tamil Nadu' },
  { code: 'gu', name: 'Gujarati', native: 'ગુજરાતી', speakers: '60M+', regions: 'Gujarat' },
  { code: 'kn', name: 'Kannada', native: 'ಕನ್ನಡ', speakers: '48M+', regions: 'Karnataka' },
