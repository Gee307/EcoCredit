import React, { useState } from "react";
import { Card, CardContent, CardHeader, CardTitle } from "@/components/ui/card";
import { Button } from "@/components/ui/button";
import { Input } from "@/components/ui/input";
import { Textarea } from "@/components/ui/textarea";
import { Badge } from "@/components/ui/badge";
import { 
  Smartphone, 
  MessageSquare, 
  AlertTriangle, 
  Users, 
  MapPin,
  Camera,
  Send,
  Star,
  CheckCircle,
  Clock
} from "lucide-react";

const complaints = [
  {
    id: 1,
    title: "Illegal fishing in protected area",
    location: "Sundarbans, West Bengal",
    status: "resolved",
    priority: "high",
    date: "2024-01-15",
    reporter: "Ravi Kumar",
    description: "Witnessed trawlers fishing in the no-fishing zone near mangrove restoration site"
  },
  {
    id: 2,
    title: "Plastic waste dumping",
    location: "Chilika Lake, Odisha",
    status: "investigating",
    priority: "medium",
    date: "2024-01-12",
    reporter: "Priya Patel",
    description: "Large amounts of plastic waste found near the seagrass restoration area"
  },
  {
    id: 3,
    title: "Unauthorized construction",
    location: "Pulicat Lake, Tamil Nadu",
    status: "pending",
    priority: "high",
    date: "2024-01-10",
    reporter: "Abdul Rahman",
    description: "Construction activity detected within 200m of coral conservation zone"
  }
];

const communityMembers = [
  { name: "Ravi Kumar", role: "Local Monitor", location: "Sundarbans", reports: 23, rating: 4.8 },
  { name: "Priya Patel", role: "Community Leader", location: "Chilika Lake", reports: 18, rating: 4.9 },
  { name: "Abdul Rahman", role: "Environmental Observer", location: "Pulicat Lake", reports: 15, rating: 4.7 },
  { name: "Maya Singh", role: "Coastal Guardian", location: "Goa", reports: 31, rating: 4.9 }
];

export default function Community() {
  const [selectedComplaint, setSelectedComplaint] = useState(null);
  const [newComplaint, setNewComplaint] = useState({
    title: "",
    location: "",
    description: ""
  });

  const getStatusColor = (status) => {
    switch(status) {
      case 'resolved': return 'bg-green-100 text-green-800';
      case 'investigating': return 'bg-blue-100 text-blue-800';
      case 'pending': return 'bg-yellow-100 text-yellow-800';
      default: return 'bg-gray-100 text-gray-800';
    }
  };

  const getPriorityColor = (priority) => {
    switch(priority) {
      case 'high': return 'bg-red-100 text-red-800';
      case 'medium': return 'bg-orange-100 text-orange-800';
      case 'low': return 'bg-blue-100 text-blue-800';
      default: return 'bg-gray-100 text-gray-800';
    }
  };

  return (
    <div className="p-6 space-y-8">
      {/* Header */}
      <div className="bg-gradient-to-r from-blue-500 to-purple-600 rounded-2xl p-8 text-white">
        <h1 className="text-3xl font-bold mb-4">Community Mobile App</h1>
        <p className="text-blue-100 text-lg mb-6">
          Empowering local communities to monitor and protect coastal ecosystems
        </p>
        
        <div className="grid md:grid-cols-3 gap-6">
          <div className="bg-white/10 rounded-lg p-4 backdrop-blur-sm">
            <div className="flex items-center gap-2 mb-2">
              <Users className="w-4 h-4" />
              <span className="text-sm font-medium">Active Users</span>
            </div>
            <div className="text-2xl font-bold">3,245</div>
            <div className="text-xs text-blue-100">Across 47 projects</div>
          </div>
          <div className="bg-white/10 rounded-lg p-4 backdrop-blur-sm">
            <div className="flex items-center gap-2 mb-2">
              <MessageSquare className="w-4 h-4" />
              <span className="text-sm font-medium">Reports Filed</span>
            </div>
            <div className="text-2xl font-bold">1,847</div>
            <div className="text-xs text-blue-100">This month</div>
          </div>
          <div className="bg-white/10 rounded-lg p-4 backdrop-blur-sm">
            <div className="flex items-center gap-2 mb-2">
              <AlertTriangle className="w-4 h-4" />
              <span className="text-sm font-medium">Issues Resolved</span>
            </div>
            <div className="text-2xl font-bold">94%</div>
            <div className="text-xs text-blue-100">Resolution rate</div>
          </div>
        </div>
      </div>

      <div className="grid lg:grid-cols-2 gap-6">
        {/* Mobile App Interface Mockup */}
        <Card className="shadow-lg">
          <CardHeader>
            <CardTitle className="flex items-center gap-2">
              <Smartphone className="w-5 h-5 text-purple-500" />
              Mobile App Interface
            </CardTitle>
          </CardHeader>
          <CardContent>
            <div className="bg-gray-900 rounded-2xl p-4 max-w-sm mx-auto">
              <div className="bg-white rounded-xl p-4 space-y-4">
                {/* App Header */}
                <div className="flex items-center justify-between">
                  <div>
                    <h3 className="font-bold text-lg text-gray-900">EcoGuard</h3>
                    <p className="text-sm text-gray-600">Community Monitor</p>
                  </div>
                  <div className="w-10 h-10 bg-emerald-500 rounded-full flex items-center justify-center">
                    <Users className="w-5 h-5 text-white" />
                  </div>
                </div>

                {/* Quick Actions */}
                <div className="grid grid-cols-2 gap-3">
                  <button className="p-3 bg-red-50 rounded-lg text-center">
                    <AlertTriangle className="w-6 h-6 text-red-500 mx-auto mb-1" />
                    <span className="text-xs font-medium text-red-700">Report Issue</span>
                  </button>
                  <button className="p-3 bg-blue-50 rounded-lg text-center">
                    <Camera className="w-6 h-6 text-blue-500 mx-auto mb-1" />
                    <span className="text-xs font-medium text-blue-700">Take Photo</span>
                  </button>
                </div>

                {/* Location Status */}
                <div className="bg-emerald-50 rounded-lg p-3">
                  <div className="flex items-center gap-2 mb-2">
                    <MapPin className="w-4 h-4 text-emerald-600" />
                    <span className="text-sm font-medium text-emerald-800">Current Location</span>
                  </div>
                  <p className="text-xs text-emerald-700">Sundarbans Mangrove Zone</p>
                  <p className="text-xs text-emerald-600">22.4064° N, 89.1947° E</p>
                </div>

                {/* Recent Activity */}
                <div>
                  <h4 className="text-sm font-semibold text-gray-800 mb-2">Recent Reports</h4>
                  <div className="space-y-2">
                    <div className="flex items-center justify-between text-xs">
                      <span className="text-gray-700">Illegal fishing report</span>
                      <Badge className="bg-green-100 text-green-800">Resolved</Badge>
                    </div>
                    <div className="flex items-center justify-between text-xs">
                      <span className="text-gray-700">Waste dumping alert</span>
                      <Badge className="bg-blue-100 text-blue-800">Investigating</Badge>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </CardContent>
        </Card>

        {/* Submit New Complaint */}
        <Card className="shadow-lg">
          <CardHeader>
            <CardTitle className="flex items-center gap-2">
              <MessageSquare className="w-5 h-5 text-orange-500" />
              Submit New Report
            </CardTitle>
          </CardHeader>
          <CardContent className="space-y-4">
            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">Issue Title</label>
              <Input 
                placeholder="Brief description of the issue"
                value={newComplaint.title}
                onChange={(e) => setNewComplaint({...newComplaint, title: e.target.value})}
              />
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">Location</label>
              <Input 
                placeholder="Specific location or nearest landmark"
                value={newComplaint.location}
                onChange={(e) => setNewComplaint({...newComplaint, location: e.target.value})}
              />
            </div>

            <div>
              <label className="block text-sm font-medium text-gray-700 mb-2">Detailed Description</label>
              <Textarea 
                placeholder="Provide detailed information about the issue, including when it was observed and any other relevant details"
                rows={4}
                value={newComplaint.description}
                onChange={(e) => setNewComplaint({...newComplaint, description: e.target.value})}
              />
            </div>

            <div className="grid grid-cols-2 gap-4">
              <Button variant="outline" className="flex items-center gap-2">
                <Camera className="w-4 h-4" />
                Add Photos
              </Button>
              <Button variant="outline" className="flex items-center gap-2">
                <MapPin className="w-4 h-4" />
                Add GPS Location
              </Button>
            </div>

            <Button className="w-full bg-orange-600 hover:bg-orange-700 flex items-center gap-2">
              <Send className="w-4 h-4" />
              Submit Report
            </Button>
          </CardContent>
        </Card>
      </div>

      {/* Recent Complaints */}
      <Card className="shadow-lg">
        <CardHeader>
          <CardTitle className="flex items-center gap-2">
            <AlertTriangle className="w-5 h-5 text-yellow-500" />
            Recent Community Reports
          </CardTitle>
        </CardHeader>
        <CardContent>
          <div className="space-y-4">
            {complaints.map((complaint) => (
              <div key={complaint.id} className="p-4 border rounded-lg hover:shadow-md transition-shadow cursor-pointer"
                   onClick={() => setSelectedComplaint(complaint)}>
                <div className="flex items-start justify-between mb-2">
                  <div>
                    <h4 className="font-semibold text-gray-900">{complaint.title}</h4>
                    <div className="flex items-center gap-4 text-sm text-gray-600 mt-1">
                      <span className="flex items-center gap-1">
                        <MapPin className="w-4 h-4" />
                        {complaint.location}
                      </span>
                      <span>Reported by {complaint.reporter}</span>
                      <span>{complaint.date}</span>
                    </div>
                  </div>
                  <div className="flex gap-2">
                    <Badge className={getPriorityColor(complaint.priority)}>
                      {complaint.priority}
                    </Badge>
                    <Badge className={getStatusColor(complaint.status)}>
                      {complaint.status === 'resolved' && <CheckCircle className="w-3 h-3 mr-1" />}
                      {complaint.status === 'investigating' && <Clock className="w-3 h-3 mr-1" />}
                      {complaint.status}
                    </Badge>
                  </div>
                </div>
                <p className="text-sm text-gray-600">{complaint.description}</p>
              </div>
            ))}
          </div>
        </CardContent>
      </Card>

      {/* Community Members */}
      <Card className="shadow-lg">
        <CardHeader>
          <CardTitle className="flex items-center gap-2">
            <Users className="w-5 h-5 text-blue-500" />
            Top Community Contributors
          </CardTitle>
        </CardHeader>
        <CardContent>
          <div className="grid md:grid-cols-2 gap-4">
            {communityMembers.map((member, index) => (
              <div key={index} className="p-4 bg-gray-50 rounded-lg">
                <div className="flex items-start justify-between mb-2">
                  <div>
                    <h4 className="font-semibold text-gray-900">{member.name}</h4>
                    <p className="text-sm text-gray-600">{member.role}</p>
                    <p className="text-sm text-gray-500">{member.location}</p>
                  </div>
                  <div className="text-right">
                    <div className="flex items-center gap-1 mb-1">
                      <Star className="w-4 h-4 text-yellow-500" />
                      <span className="text-sm font-medium">{member.rating}</span>
                    </div>
                    <p className="text-xs text-gray-500">{member.reports} reports</p>
                  </div>
                </div>
              </div>
            ))}
          </div>
        </CardContent>
      </Card>
    </div>
  );
}